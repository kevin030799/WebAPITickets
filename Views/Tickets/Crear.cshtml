@model TicketViewModel
@{
    ViewBag.Title = "Crear Ticket";
}

<h2>Crear nuevo ticket</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Asunto"></label>
        <input asp-for="Asunto" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Categoria"></label>
        <select asp-for="Categoria" class="form-control">
            <option>Hardware</option>
            <option>Software</option>
            <option>Red</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="AsignadoA"></label>
        <select asp-for="AsignadoA" class="form-control" asp-items="Model.UsuariosSoporte"></select>
    </div>

    <div class="form-group">
        <label asp-for="Urgencia"></label>
        <select asp-for="Urgencia" class="form-control">
            <option>Baja</option>
            <option>Media</option>
            <option>Alta</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="Importancia"></label>
        <select asp-for="Importancia" class="form-control">
            <option>Baja</option>
            <option>Media</option>
            <option>Alta</option>
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Guardar Ticket</button>
</form>

